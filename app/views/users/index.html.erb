<div class='rounded shadow-inner mx-4 content-center'>
  <div class="flex flex-row justify-between mx-6 py-4">
    <h1>Users</h1>
    <%= link_to 'New User', new_user_path, remote: true %>
  </div>

  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="min-w-full text-left text-sm font-light">
            <thead class="border-b font-medium dark:border-neutral-500 bg-blue-50">
              <tr>
                <th scope="col" class="px-6 py-4">Name</th>
                <th scope="col" class="px-6 py-4">Email</th>
                <th scope="col" class="px-6 py-4">Date Added</th>
                <th scope="col" class="px-6 py-4">Edit</th>
                <th scope="col" class="px-6 py-4">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr class="border-b transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-neutral-300 dark:hover:bg-neutral-200">
                  <td class="flex whitespace-nowrap px-6 py-4">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6"><path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" /></svg>
                  <span class="mx-2"><%= user.first_name + " " + user.last_name %></span>
                  </td>
                  <td class="whitespace-nowrap px-6 py-4"><%= user.email %></td>
                  <td class="whitespace-nowrap px-6 py-4"><%= user.created_at %></td>
                  <td><%= link_to 'Edit', edit_user_path(user), class: 'bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded'%></td>
                  <td><%= button_to 'Delete', user_path(user), method: :delete, class: 'bg-red-500 hover:bg-red-700 text-white px-4 py-2 rounded' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
