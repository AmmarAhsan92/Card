<h1>Edit Task</h1>

<%= form_with model: @task, local: false do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :first_name, prompt: true %>
    <%= f.submit 'Assign Task', class: 'btn btn-primary' %>
  </div>

  <div>
    <%= form.submit 'Update Task', data: { turbo: false } %>
  </div>
<% end %>

<%= link_to 'Back', tasks_path %>
