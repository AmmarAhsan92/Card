<h1>Edit Task</h1>

<%= form_with model: @task, local: false do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit 'Update Task', data: { turbo: false } %>
  </div>
<% end %>

<%= link_to 'Back', tasks_path %>
