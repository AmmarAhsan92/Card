<h1>New Task</h1>

<%= form_with model: @task, local: false do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :first_name, prompt: true %>
  </div>

  <div>
    <%= form.submit 'Create Task', data: { turbo: false } %>
  </div>
<% end %>

<%= link_to 'Back', tasks_path %>
